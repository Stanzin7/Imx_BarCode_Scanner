{
  "expo": {
    "name": "Imx",
    "slug": "Imx",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash1.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan barcode. Access is needed for [specific functionality], ensuring better service."
      },
      "bundleIdentifier": "com.Imx.Scan",
      "buildNumber": "7"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA", "android.permission.CAMERA"],
      "package": "com.stanzin7.Imx"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "We need access to your camera to scan product barcodes and UPC codes for product information retrieval and inventory management."
        }
      ]
    ],
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "282128ed-2625-41bf-b576-733cfdb31ab9"
      }
    }
  }
}
